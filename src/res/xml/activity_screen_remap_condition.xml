<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:key="default_condition_preference"
        android:title="@string/preference_title_default_condition"
        android:summary="@string/preference_summary_default_condition"
        android:persistent="false" />

    <PreferenceCategory
        android:key="actions_single_group"
        android:title="@string/category_button_single_states">
        
        <com.spazedog.xposed.additionsgb.tools.views.WidgetPreference
            android:key="state_click_preference"
            android:title="@string/preference_state_click"
            android:widgetLayout="@layout/widget_checkbox" />
        
        <com.spazedog.xposed.additionsgb.tools.views.WidgetPreference
            android:key="state_press_preference"
            android:title="@string/preference_state_press"
            android:widgetLayout="@layout/widget_checkbox" />
        
    </PreferenceCategory>
    
    <PreferenceCategory
        android:key="actions_double_group"
        android:title="@string/category_button_double_states">
        
        <com.spazedog.xposed.additionsgb.tools.views.WidgetPreference
            android:key="state_tap_preference"
            android:title="@string/preference_state_click"
            android:widgetLayout="@layout/widget_checkbox" />
        
        <com.spazedog.xposed.additionsgb.tools.views.WidgetPreference
            android:key="state_doublepress_preference"
            android:title="@string/preference_state_press"
            android:widgetLayout="@layout/widget_checkbox" />
        
    </PreferenceCategory>
    
    <PreferenceCategory
        android:key="actions_triple_group"
        android:title="@string/category_button_triple_states">
        
        <com.spazedog.xposed.additionsgb.tools.views.WidgetPreference
            android:key="state_tripletap_preference"
            android:title="@string/preference_state_click"
            android:widgetLayout="@layout/widget_checkbox" />

        <com.spazedog.xposed.additionsgb.tools.views.WidgetPreference
            android:key="state_triplepress_preference"
            android:title="@string/preference_state_press"
            android:widgetLayout="@layout/widget_checkbox" />
        
    </PreferenceCategory>   

</PreferenceScreen>
