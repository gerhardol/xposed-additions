<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:robobunny="http://robobunny.com" >
    
    <PreferenceCategory
        android:key="settings_group"
        android:title="@string/category_settings">
        
        <com.spazedog.xposed.additionsgb.tools.views.SeekBarPreference
            android:key="delay_key_tap_preference"
            android:title="@string/preference_title_delay_key_tap"
            android:persistent="false"
            android:max="400"
            robobunny:min="50"
            robobunny:unitsRight="ms" />
        
        <com.spazedog.xposed.additionsgb.tools.views.SeekBarPreference
            android:key="delay_key_press_preference"
            android:title="@string/preference_title_delay_key_press"
            android:persistent="false"
            android:max="600"
            robobunny:min="100"
            robobunny:unitsRight="ms" />

        <CheckBoxPreference
            android:key="check_unconfigured_primary_key_preference"
            android:title="@string/preference_title_check_unconfigured_primary_key"
            android:summary="@string/preference_summary_check_unconfigured_primary_key"
            android:persistent="false" />

        <CheckBoxPreference
            android:key="allow_externals_preference"
            android:title="@string/preference_title_allow_externals"
            android:summary="@string/preference_summary_allow_externals"
            android:persistent="false" />

    </PreferenceCategory>
    
    <PreferenceCategory
        android:key="keys_group"
        android:title="@string/category_keys">
        
        <com.spazedog.xposed.additionsgb.tools.views.WidgetPreference
            android:key="add_key_preference"
            android:title="@string/preference_add_key" />
        
    </PreferenceCategory>

</PreferenceScreen>
